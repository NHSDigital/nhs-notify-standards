{
  "$id": "https://nhsdigital.github.io/nhs-notify-standards/cloudevents/nhs-notify-payload.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Notify Payload",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "notify-data",
    "notify-metadata",
    "plane-type"
  ],
  "properties": {
    "plane-type": {
      "type": "string",
      "enum": [
        "data",
        "control"
      ],
      "description": "Indicates whether this event is a data plane or control plane event. Must align with presence of customer-id in notify-data."
    },
    "notify-data": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/$defs/DataPlane"
        },
        {
          "$ref": "#/$defs/ControlPlane"
        }
      ],
      "additionalProperties": true
    },
    "notify-metadata": {
      "type": "object",
      "allOf": [
        {
          "$ref": "./nhs-notify-metadata.schema.json"
        }
      ]
    }
  },
  "$defs": {
    "DataPlane": {
      "type": "object",
      "required": [
        "customer-id"
      ],
      "properties": {
        "customer-id": {
          "type": "string",
          "format": "uuid",
          "description": "Customer ID (UUID)"
        }
      }
    },
    "ControlPlane": {
      "type": "object",
      "not": {
        "required": [
          "customer-id"
        ]
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "notify-data": {
            "properties": {
              "customer-id": {
                "type": "string"
              }
            },
            "required": [
              "customer-id"
            ]
          }
        }
      },
      "then": {
        "properties": {
          "plane-type": {
            "const": "data"
          }
        }
      },
      "else": {
        "properties": {
          "plane-type": {
            "const": "data"
          }
        }
      }
    }
  ]
}