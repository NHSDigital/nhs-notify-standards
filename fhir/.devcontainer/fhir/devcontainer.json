{
  "name": "NHS Notify FHIR IG",
  "image": "mcr.microsoft.com/devcontainers/java:17-bookworm",
  "workspaceMount": "source=${localWorkspaceFolder}/../,target=/workspace,type=bind",
  "workspaceFolder": "/workspace/fhir",
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",
        "yzhang.markdown-all-in-one",
        "EditorConfig.EditorConfig",
        "MITRE-CTF.vscode-language-fsh"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.eol": "\n",
        "editor.tabSize": 2,
        "yaml.format.enable": true
      }
    }
  },
  "containerEnv": {
    "IG_ROOT": "/workspace/fhir",
    "IG_TOOLS": "/workspace/fhir/fhirtools",
    "JAVA_TOOL_OPTIONS": "-Dfile.encoding=UTF-8"
  },
  "mounts": [
    "source=nhsnotify-txcache,target=/workspace/fhir/txCache,type=volume",
    "source=nhsnotify-npmcache,target=/home/vscode/.npm,type=volume"
  ],
  "postCreateCommand": "pwd && ls -la && bash scripts/setup.sh && python3 -m pip install --no-cache-dir --upgrade pip && python3 -m pip install --no-cache-dir PyYAML",
  "forwardPorts": [8080, 8081, 9090],
  "postStartCommand": "echo 'Dev container started. Docker should be available (docker version). Try: ./tools/build.sh'",
  "runArgs": ["--init", "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined"]
}
